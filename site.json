{
    "sites": [
    {
        "root": "neck-bolts",
        "pages": [
            {
                "source": "pages/index.md",
                "target": "index.html"
            },
            {
                "source": "pages/experiments/*.md",
                "target": "experiments/*.html"
            }
        ],
        "templates": [
            "templates"
        ],
        "resources": [
            {
                "source": "resources/css/reset.css",
                "target": "resources/css/reset.css"
            },
            {
                "source": "resources/css/base.css",
                "target": "resources/css/base.css"
            },
            {
                "source": "resources/scripts",
                "target": "resources/scripts",
                "resource_type": "relocate"
            },
            {
                "source": "resources/img",
                "target": "resources/img",
                "resource_type": "relocate"
            },
            {
                "source": "resources/video",
                "target": "resources/video",
                "resource_type": "relocate"
            }
        ]
    }
]}
